{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "arrow-body-style": "off",
        "global-require": "off",
        "import/extensions": { "js": "always" },
        "indent": ["error", 4],
        "linebreak-style": "off",
        "no-console": 0,
        "prefer-destructuring": ["error", {"object": true, "array": false}],
        "semi": "warn",
        "space-before-function-paren": "off"
    }
}
